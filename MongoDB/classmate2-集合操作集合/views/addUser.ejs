<% include header %>
<div class="container">
    <ol class="breadcrumb">
        <li><a href="#">学员管理</a></li>
        <li class="active">添加学员</li>
    </ol>
    <div class="row">
        <div class="col-md-4 col-sm-3"></div>
        <div class="col-md-4 col-sm-6">
            <form action="/userInsert" class="addUser-form" method="post">
                <ul>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">姓名：</span>
                            <input type="text" class="form-control" name="username">
                        </div>
                    </li>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">性别：</span>
                            <div class="form-control">
                                <input type="radio" value="1" name="sex"> 男
                                <input type="radio" value="0" name="sex"> 女
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">课程：</span>
                            <select name="kcId" class="form-control">
                                <% for(var i = 0;i<kcList.length;i++){ %>
                                <option value="<%= kcList[i]._id %>">
                                    <%= kcList[i].name %>
                                </option>
                                <% } %>
                            </select>
                        </div>
                    </li>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">年龄：</span>
                            <input type="number" class="form-control" name="age">
                        </div>
                    </li>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">电话：</span>
                            <input type="number" class="form-control" name="tel">
                        </div>
                    </li>
                    <li>
                        <input type="submit">
                    </li>
                </ul>
            </form>
        </div>
        <div class="col-md-4 col-sm-3"></div>
    </div>
</div>
<% include footer %>