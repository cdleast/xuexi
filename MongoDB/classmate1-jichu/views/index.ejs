<% include header %>
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="#">学员管理</a></li>
            <li class="active">学员列表</li>
        </ol>
        <table class="table">
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>年龄</th>
                    <th>电话</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0;i<userlist.length;i++){ %>
                <tr>
                    <td>
                        <%= userlist[i].username %>
                    </td>
                    <td>
                        <%= userlist[i].sex==1?'男':'女' %>
                    </td>
                    <td>
                        <%= userlist[i].age %>
                    </td>
                    <td>
                        <%= userlist[i].tel %>
                    </td>
                    <td>
                        <a href="/userEdit/<%= userlist[i]._id %>">编辑</a>
                        |
                        <a href="/userRemove/<%= userlist[i]._id %>" onclick="return confirm('您确定要删除吗?')">删除</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
<% include footer %>