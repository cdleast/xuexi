<% include header %>
<div class="container">
    <ol class="breadcrumb">
        <li><a href="#">学员管理</a></li>
        <li class="active">编辑课程</li>
    </ol>
    <div class="row">
        <div class="col-md-4 col-sm-3"></div>
        <div class="col-md-4 col-sm-6">
            <form action="/kcUpdate" class="addUser-form" method="post">
                <!-- input框的隐藏域，用户看不到，只为和后台数据传输 -->
                <input type="hidden" value="<%= kcEdit._id %>" name="_id">
                <ul>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">名称：</span>
                            <input type="text" class="form-control" name="name" value="<%= kcEdit.name %>">
                        </div>
                    </li>
                    <li>
                        <div class="input-group">
                            <span class="input-group-addon">介绍：</span>
                            <input type="text" class="form-control" name="info" value="<%= kcEdit.info %>">
                        </div>
                    </li>
                    <li>
                        <input type="submit">
                    </li>
                </ul>
            </form>
        </div>
        <div class="col-md-4 col-sm-3"></div>
    </div>
</div>
<% include footer %>