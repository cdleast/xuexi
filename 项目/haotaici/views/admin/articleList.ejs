<% include ./header %>
<h3 class="page-title">文章列表</h3>
<table class="table table-bordered">
    <tr>
        <td>标题</td>
        <td>栏目</td>
        <td>作者</td>
        <td>时间</td>
        <td>操作</td>
    </tr>
    <% for(var i = 0;i<articledata.length;i++){ %>
    <tr>
        <td>
            <%= articledata[i].title %>
        </td>
        <td>
            <%= articledata[i].itemId.name %>
        </td>
        <td>
            <%= articledata[i].author %>
        </td>
        <td>
            <!-- 时间转换成字符串格式 -->
            <%= articledata[i].ctime.toLocaleString() %>
        </td>
        <td>
            <a href="/admin/articleEdit/<%= articledata[i]._id %>">编辑</a>
            |
            <a href="/admin/articleDel/<%= articledata[i]._id %>" onclick="return confirm('您确定要删除吗?')">删除</a>
        </td>
    </tr>
    <% } %>
</table>
<% include ./footer %>